@model IndexViewModel

@{
    ViewBag.Title = "Welcome";
}

@{
    var cars = Model.Cars;
    var firstCar = cars.Any() ? cars[0] : null;
    var secondCar = cars.Count > 1 ? cars[1] : null;
    var thirdCar = cars.Count > 2 ? cars[2] : null;
}

@if (!cars.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the best place for renting cars!</h1>
        <p class="lead">There are no cars in the system currently available so why don't you just add one?</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Cars" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Car</a>
        </p>
    </div>
}

<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slcarIde" data-rcarIde="carousel">
    <div class="carousel-inner">
        @if (firstCar != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="@firstCar.ImageUrl" alt="@firstCar.Brand @firstCar.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Cars" asp-action="Details" asp-route-carId="@firstCar.Id">@firstCar.Year  @firstCar.Brand @firstCar.Model</a></h5>
                </div>
            </div>
        }
        @if (secondCar != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@secondCar.ImageUrl" alt="@secondCar.Brand @secondCar.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Cars" asp-action="Details" asp-route-carId="@secondCar.Id">@secondCar.Year  @secondCar.Brand @secondCar.Model</a></h5>
                </div>
            </div>
        }
        @if (thirdCar != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@thirdCar.ImageUrl" alt="@thirdCar.Brand @thirdCar.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Cars" asp-action="Details" asp-route-carId="@thirdCar.Id">@thirdCar.Year  @thirdCar.Brand @thirdCar.Model</a></h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slcarIde="prev">
        <span class="carousel-control-prev-icon" aria-hcarIdden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slcarIde="next">
        <span class="carousel-control-next-icon" aria-hcarIdden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="mb-5"></div>

<div class="row">
    <div class="col-12 text-center">
        <button class="btn btn-primary" id="statistics-button">Show Statistics</button>
    </div>
</div>

<div class="jumbotron d-none" id="statistics">
    <div class="row">
        <h2 class="col-md-4 text-center" id="total-cars"></h2>
        <h2 class="col-md-4 text-center" id="total-users"></h2>
        <h2 class="col-md-4 text-center" id="total-rents"></h2>
    </div>
</div>

@section Scripts
{
    <script>
        $('#statistics-button').on('click',
            ev => {
                $.get('/api/statistics',
                    (data) => {
                        $('#total-cars').text(data.totalCars + ' Cars');
                        $('#total-users').text(data.totalUsers + ' Users');
                        $('#total-rents').text(data.totalRents + ' Rents');

                        $('#statistics').removeClass('d-none');
                        $('#statistics-button').hide();
                    });
            });
    </script>
}
